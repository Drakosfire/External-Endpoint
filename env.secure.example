# LibreChat Secure Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# ========================================
# DATABASE SECURITY
# ========================================
# Generate with: openssl rand -base64 32
MONGO_ROOT_PASSWORD=your-super-secure-root-password-here
MONGO_PASSWORD=your-super-secure-librechat-password-here

# MongoDB connection string (auto-generated from above)
# MONGO_URI=mongodb://librechat_user:${MONGO_PASSWORD}@mongodb:27017/LibreChat?authSource=LibreChat

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here
CREDS_KEY=your-32-character-encryption-key
CREDS_IV=your-16-character-iv-here

# ========================================
# SERVER CONFIGURATION
# ========================================
HOST=0.0.0.0
PORT=3080
NODE_ENV=production

# ========================================
# AI SERVICE API KEYS
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-api-key

# ========================================
# FEATURES & SETTINGS
# ========================================
ALLOW_REGISTRATION=false
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false

# ========================================
# EXTERNAL MESSAGE SYSTEM
# ========================================
EXTERNAL_MESSAGE_API_KEY=your-external-api-key-here

# ========================================
# SEARCH & VECTOR DATABASE
# ========================================
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=your-meilisearch-master-key
RAG_PORT=8000
RAG_API_URL=http://rag_api:8000

# ========================================
# SYSTEM CONFIGURATION
# ========================================
UID=1000
GID=1000

# ========================================
# SECURITY HEADERS & CORS
# ========================================
# CORS_ORIGIN=https://yourdomain.com
# SECURE_HEADERS=true
# RATE_LIMIT_ENABLED=true

# ========================================
# MONITORING & LOGGING
# ========================================
LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn-here
